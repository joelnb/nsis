target = 'LibraryLocal'

files = Split("""
	LibraryLocal.cpp
	#Source/ResourceEditor.cpp
	#Source/util.cpp
	#Source/winchar.cpp
""")

libs = Split("""
	oleaut32
""")

Import('BuildUtil env')

if env['PLATFORM'] != 'win32':
	libs = []

BuildUtil(target, files, libs, flags = ['$EXCEPTION_FLAG'], cross_platform = True)
